<shape
xmlns:android="http://schemas.android.com/apk/res/android"
android:shape="rectangle">

<!--  background color -->
<solid
    android:color="#FFFFFF">
</solid>

<!-- border color and width -->
<stroke
    android:width="1dp"
    android:color="#6026d0ff">
</stroke>

<!--  padding -->
<padding
    android:left="2dp"
    android:top="2dp"
    android:right="2dp"
    android:bottom="2dp"    >
</padding>

<!-- corner radius -->
<corners
    android:radius="5dp"   >
</corners>

</shape>